<h1>To Dos</h1>

<h2>Tasks To Do</h2>
<ul>
  <% @tasks.not_done.each do |task| %>
    <li><a href="/tasks/<%= task.id %>"><%= task.title %></a>
    <form action="/tasks/<%= task.id %>" method="post">
      <input name="_method" type="hidden" value="patch">
      <input name="task[done]" type="hidden" value="true">
      <button>Mark as done</button>
     </form>
     </br>
    </li>
  <% end %>
</ul>

<h2>Completed Tasks</h2>
 <ul>
  <% @tasks.done.each do |task| %>
    <li><a href="/tasks/<%= task.id %>"><%= task.title %></a>
    </li></br>
  <% end %>
</ul>
</br>
</br>
<h3><a href="/tasks/new">Add a New Task</a></h3>